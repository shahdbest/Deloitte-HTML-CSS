--------------------------------. Show Text When Hovered (onmouseover / onmouseout)


<!DOCTYPE html>
<html>
<body>
  <h2 onmouseover="hoverText()" onmouseout="resetText()">Hover over me</h2>

  <script>
    function hoverText() {
      document.querySelector("h2").innerHTML = "Mouse is here!";
    }
    function resetText() {
      document.querySelector("h2").innerHTML = "Hover over me";
    }
  </script>
</body>
</html>

------------key pressed


<!DOCTYPE html>
<html>
<body>
  <h2>Key Press Demo</h2>
  <input type="text" onkeyup="showKey(event)" placeholder="Type something...">
  <p id="output"></p>

  <script>
    function showKey(event) {
      document.getElementById("output").innerHTML = "You pressed: " + event.key;
    }
  </script>
</body>
</html>


------------------ empty field validation

<!DOCTYPE html>
<html>
<body>
  <h2>Form Validation</h2>
  <form onsubmit="return validateForm()">
    <input type="text" id="username" placeholder="Enter username">
    <button type="submit">Submit</button>
  </form>

  <script>
    function validateForm() {
      let user = document.getElementById("username").value;
      if (user === "") {
        alert("Username cannot be empty!");
        return false; // stop form submission
      }
      return true;
    }
  </script>
</body>
</html>

------------------------password length validation

<!DOCTYPE html>
<html>
<body>
  <h2>Password Validation</h2>
  <form onsubmit="return checkPassword()">
    <input type="password" id="pass" placeholder="Enter password">
    <button type="submit">Submit</button>
  </form>

  <script>
    function checkPassword() {
      let pwd = document.getElementById("pass").value;
      if (pwd.length < 6) {
        alert("Password must be at least 6 characters!");
        return false;
      }
      return true;
    }
  </script>
</body>
</html>


