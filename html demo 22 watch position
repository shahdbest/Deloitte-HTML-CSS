<head>
	<title>my web page</title>

<script type="text/javascript">
	
function myLocFun()
{

	navigator.geolocation.watchPosition(mypos);
}

function mypos(pos){
		console.log(pos.coords.longitude);
			//alert(pos.coords.longitude + " " + pos.coords.latitude)
}


</script>

</head>

<body bgcolor="#9da9b3">


<button onclick="myLocFun()"> get my location </button>

</body>


